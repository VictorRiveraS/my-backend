{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "lib": [
            "es2021"
        ],
        "allowJs": true,
        "outDir": "build",
        "rootDir": "src",
        "strict": false,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": [
        "**/*.ts"
    ],
}